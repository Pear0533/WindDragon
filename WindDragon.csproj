<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <ApplicationIcon>icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="configs\blacklisted_files.wdconfig">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="configs\blacklisted_folders.wdconfig">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="configs\whitelisted_files.wdconfig">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <None Update="configs\whitelisted_folders.wdconfig">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
